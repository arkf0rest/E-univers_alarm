{
  "manifest_version": 3,
  "name": "E-univers alarm",
  "version": "2.0",
  "description": "Notifie l'utilisateur via Discord s'il se fait attaquer.",
  
  "action": {
    "default_popup": "popup.html"
  },

  "permissions": ["storage", "tabs", "alarms", "offscreen"],

  "host_permissions": [
    "https://e-univers.fr/*",
    "http://localhost:5000/*",
    "https://protanopic-tawnya-brazenly.ngrok-free.dev/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "web_accessible_resources": [
    {
      "resources": ["sound.mp3"],
      "matches": ["<all_urls>"]
    }
  ]
}
